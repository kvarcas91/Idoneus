<Window x:Class="Idoneus.Dialogs.AddContributorPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Idoneus.Dialogs"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        xmlns:converters="clr-namespace:Idoneus.Converters"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Border BorderThickness="0.2"
            BorderBrush="{StaticResource PrimaryColorBrush}"
            CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Opacity="0.2" />
        </Border.Effect>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListView Grid.Row="0"
                x:Name="AddContributorList"
                  ItemsSource="{Binding Contributors}">
                <ListView.ItemTemplate>


                    <DataTemplate>

                        <Border Padding="0 5 0 5">
                            <CheckBox Grid.Row="0" Grid.Column="1" 
                                              Grid.RowSpan="2"
                                              x:Name="IsCompleted"
                               Checked="CheckBoxChanged" Unchecked="CheckBoxChanged"
                              IsChecked="{Binding IsSelected}"
                              Tag="{Binding}"
                              Style="{StaticResource TaskCheckBox}">
                                <TextBlock Text="{Binding FullName}"
                                                   TextAlignment="Justify"
                                                   TextWrapping="Wrap"
                                   Margin="0 3 0 0"
                                   Style="{StaticResource RegularListItemSnippetText}"
                                       Foreground="{Binding IsCompleted, Converter={converters:IsCompletedToColorConverter}}"
                                                   TextDecorations="{Binding IsCompleted,
                                                                     Converter={converters:BoolToTextDecorationConverter}}"/>
                            </CheckBox>

                        </Border>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="1" 
                        x:Name="AddContributorPanel"                
                   MaxHeight="100"
                   Opacity="0.5"
                   Background="White"
                  Visibility="{Binding }">

                <Grid.ColumnDefinitions>

                    <!-- Add Comment textbox -->
                    <ColumnDefinition Width="*"/>

                    <!-- Send button -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="SendCommentTextBox"
                                            Grid.Column="0"
                                                 Padding="5"
                                                MaxLength="40"
                                        Style="{StaticResource BaseTextBox}"
                                            />
                <TextBlock 
                    x:Name="ContributorName"
                    Grid.Column="0"
                    
                    Text="Write full name here..."
                    
                    Style="{StaticResource HintTextBlock}"/>

                <!-- Send comment -->
                <Button Grid.Column="1"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="10 0"
                        Click="AddNewContributor"
                        Style="{StaticResource PackButtonBase}"
                        ToolTip="Add Contributor"
                                                  >
                    <materialDesign:PackIcon Kind="Send"
                                                 Foreground="{StaticResource LightBlueColorBrush}"
                                                 Style="{StaticResource GrowPackIcon}"/>
                </Button>

            </Grid>

            <Button Grid.Row="2"
            Content="OK" Click="Button_Click"/>
        </Grid>
    </Border>
 
</Window>
